{
  "name": "cds-nosql",
  "version": "0.0.1-alpha",
  "description": "(Cosmos DB) NoSQL adapter for SAPCAP (Node.js)",
  "author": "",
  "dependencies": {
    "@azure/cosmos": "latest",
    "@cap-js/db-service": "latest",
    "@sap/cds": ">=7"
  },
  "devDependencies": {
    "chai": "*",
    "chai-as-promised": "*",
    "chai-subset": "*",
    "eslint": "*",
    "express": "^4",
    "jest": "*",
    "prettier": "*",
    "sqlite3": "^5.1.6"
  },
  "scripts": {
    "prettier": "npx prettier --write .",
    "cosmos:local": "docker-compose -f etc/cosmos-stack.yml up",
    "cosmos:remote": "echo '🔐 you need to connect programmatically! 👨‍💻' && exit 0",
    "test": "jest --silent",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "npx eslint .",
    "lint:prettier": "npx prettier --check ."
  },
  "cds": {
    "requires": {
      "kinds": {
        "cosmos": {
          "impl": "cds-nosql/lib/CosmosService"
        }
      }
    }
  },
  "license": "Apache-2.0"
}